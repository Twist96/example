<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:elevation="0.5dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="4dp"
    app:cardElevation="1dp"
    android:background="@drawable/corner_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12sp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_todo_list"
            android:padding="10dp"
            android:background="@drawable/ic_ova"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/skid_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="GML/007"
            android:textSize="16sp"
            android:textColor="#6A6A77"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/details"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/volume_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume (kg): 7148.97"
                android:textSize="9sp"
                android:textColor="#4F4F4F"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/volume_scm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume (kg): 7148.97"
                android:textSize="9sp"
                android:textColor="#4F4F4F"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume (kg): 7148.97"
                android:textSize="9sp"
                android:textColor="#4F4F4F"
                android:layout_margin="2dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>