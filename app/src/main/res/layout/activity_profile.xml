<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.gasco.UI.Activities.ProfileActivity">

    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:elevation="1dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avi"
                android:layout_margin="8dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/role_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operation Enginer"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adesanya Michael"
            android:textSize="16sp"
            android:textColor="#9EA4AF"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#E5E5E5"
            android:layout_marginTop="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="EditProfile"
            android:text="Edit Profile"
            android:textColor="#737A91"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            app:icon="@drawable/ic_arrow_right_black_24dp"
            app:iconGravity="end"
            app:iconTint="#737A91"
            android:padding="12dp"
            android:layout_marginTop="32dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.65dp"
            android:background="#DFE2E6"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:onClick="UpdatePassword"
            android:textColor="#737A91"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            app:icon="@drawable/ic_arrow_right_black_24dp"
            app:iconGravity="end"
            app:iconTint="#737A91"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.65dp"
            android:background="#DFE2E6"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:onClick="LogOut"
            android:textColor="#F61F1F"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

    </LinearLayout>


</LinearLayout>
