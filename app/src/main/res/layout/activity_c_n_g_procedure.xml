<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="viewClicked"
    android:background="@color/background"
    tools:context="com.gasco.UI.Activities.CNGProcedureActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Dashboard"
            android:onClick="DismissActivity"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_arrow_left_black_24dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@android:color/transparent"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/question_options_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="145dp"
            android:gravity="center"
            android:orientation="vertical"/>

    </LinearLayout>



</LinearLayout>
